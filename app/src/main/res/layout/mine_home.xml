<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@mipmap/user_center_bg">

        <TextView
            android:id="@+id/name_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp"
            android:text="欧阳锋"
            android:textSize="20sp"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="70dp"
                android:background="@drawable/shape_oral_bg"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="关注"
                    android:textColor="@color/colorWhile"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="24"
                    android:textColor="@color/colorWhile"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="70dp"
                android:background="@drawable/shape_oral_bg"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="粉丝"
                    android:textColor="@color/colorWhile"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="224"
                    android:textColor="@color/colorWhile"/>

            </LinearLayout>


        </LinearLayout>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="6dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:src="@mipmap/usercenter_wait_pay"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:src="@mipmap/usercenter_wait_send"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:src="@mipmap/usercenter_wait_recive"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:src="@mipmap/icon_wait_assess"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:src="@mipmap/usercenter_wait_pay"/>

    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <buy.win.com.winbuy.view.customview.MineHomeRelativeLayout
                android:id="@+id/like_baby"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                app:mivText="喜欢宝贝"
                >
            </buy.win.com.winbuy.view.customview.MineHomeRelativeLayout>


            <View
                style="@style/mine_line"
                />

            <buy.win.com.winbuy.view.customview.MineHomeRelativeLayout
                android:id="@+id/seller"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                app:mivText="关注商家"
                >
            </buy.win.com.winbuy.view.customview.MineHomeRelativeLayout>

            <View
                style="@style/mine_line"/>

            <buy.win.com.winbuy.view.customview.MineHomeRelativeLayout
                android:id="@+id/service"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                app:mivText="浏览记录"
                >
            </buy.win.com.winbuy.view.customview.MineHomeRelativeLayout>

            <View
                style="@style/mine_line"/>

            <buy.win.com.winbuy.view.customview.MineHomeRelativeLayout
                android:id="@+id/guess_like"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                app:mivText="猜你喜欢"
                />

            <View
                style="@style/mine_line"/>

            <buy.win.com.winbuy.view.customview.MineHomeRelativeLayout
                android:id="@+id/address_manager"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                app:mivText="地址管理"
                />



        </LinearLayout>

    </ScrollView>



</LinearLayout>