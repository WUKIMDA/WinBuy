<?xml version="1.0" encoding="utf-8"?>
<buy.win.com.winbuy.view.commodityView.GradationScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <com.daimajia.slider.library.SliderLayout
            android:id="@+id/slider"
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <com.daimajia.slider.library.Indicators.PagerIndicator
                android:id="@+id/custom_indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_margin="8dp"
                android:gravity="center"
                app:selected_color="#FF0000"
                app:selected_height="10dp"
                app:selected_padding_left="3dp"
                app:selected_padding_right="3dp"
                app:selected_width="10dp"
                app:shape="rect"
                app:unselected_color="#FFFFFF"
                app:unselected_height="5dp"
                app:unselected_padding_left="3dp"
                app:unselected_padding_right="3dp"
                app:unselected_width="5dp"/>
        </com.daimajia.slider.library.SliderLayout>


        <LinearLayout
            android:id="@+id/ll_offset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/spacing_smaller">

            <TextView
                android:id="@+id/tv_commdoty_name"
                style="@style/blackTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="商品名"/>

            <TextView
                android:id="@+id/tv_commdoty_buyLimit"
                style="@style/blackTextStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_tinyer"
                android:text="限购: 无上限"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_tinyer">


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/spacing_tinyer">

                    <TextView
                        android:id="@+id/tv_limitPrice"
                        style="@style/colorPrimaryTextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="限时抢购价:48元"/>

                    <TextView
                        android:id="@+id/tv_vipPrice"
                        style="@style/colorPrimaryTextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="会员价:88元"/>

                    <TextView
                        android:id="@+id/tv_good_detail_discount"
                        style="@style/greyTextStyleSmaller"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:paddingLeft="@dimen/spacing_tinyer"
                        android:paddingRight="@dimen/spacing_tinyer"
                        android:text="市场价:159"/>

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="0.5dp"
                        android:layout_alignLeft="@+id/tv_good_detail_discount"
                        android:layout_alignRight="@+id/tv_good_detail_discount"
                        android:layout_centerVertical="true"
                        android:background="@color/deep_transparent"/>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_tinyer"
                android:orientation="horizontal">

                <TextView
                    style="@style/greyTextStyleSmaller"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="快递：0.00"/>

                <TextView
                    style="@style/greyTextStyleSmaller"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="1321人付款"/>

                <TextView
                    android:id="@+id/tv_commdoty_inventoryArea"
                    style="@style/greyTextStyleSmaller"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="深圳"/>
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_smaller"
            android:background="@color/grey_line_bg"/>

        <LinearLayout
            android:id="@+id/ll_good_detail_service"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/spacing_small">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/da_ren_services_tick"
                android:drawablePadding="@dimen/spacing_tiny"
                android:text="担保交易"
                android:textSize="@dimen/font_smaller"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_smaller"
                android:drawableLeft="@drawable/da_ren_services_tick"
                android:drawablePadding="@dimen/spacing_tiny"
                android:text="正品保障"
                android:textSize="@dimen/font_smaller"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_smaller"
                android:drawableLeft="@drawable/da_ren_services_tick"
                android:drawablePadding="@dimen/spacing_tiny"
                android:text="赔运费险"
                android:textSize="@dimen/font_smaller"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_smaller"
                android:layout_weight="1"
                android:drawableLeft="@drawable/da_ren_services_tick"
                android:drawablePadding="@dimen/spacing_tiny"
                android:text="7天退换"
                android:textSize="@dimen/font_smaller"/>

        </LinearLayout>

        <include layout="@layout/layout_line"/>


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_smaller"
            android:background="@color/grey_line_bg"/>

        <TextView
            android:id="@+id/tv_good_detail_cate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/list_gray_item"
            android:drawableRight="@drawable/rightarrow"
            android:padding="@dimen/spacing_small"
            android:text="选择  产品分类"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_smaller"
            android:background="@color/grey_line_bg"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/spacing_small">

            <TextView
                android:id="@+id/tv_commdoty_commentCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商品评价(1)"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_smaller"
                android:orientation="horizontal">

                <buy.win.com.winbuy.view.commodityView.CircleImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_launcher"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/spacing_smallest"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="巴拉巴拉"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/da_ren_list_star"/>

                            <ImageView
                                android:id="@+id/imageView2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:src="@drawable/da_ren_list_star"/>

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/spacing_tinyest"
                                android:src="@drawable/da_ren_list_star"/>

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/spacing_tinyest"
                                android:src="@drawable/da_ren_list_star"/>

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/spacing_tinyest"
                                android:src="@drawable/da_ren_list_star"/>
                        </LinearLayout>
                    </RelativeLayout>

                    <TextView
                        style="@style/greyTextStyleSmaller"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_tinyest"
                        android:text="2016年04月"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_tinyest"
                        android:text="第二次来找这个零食了，第一次吃就开始爱上了，还是跟原来一样的味道"/>

                    <TextView
                        style="@style/greyTextStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_tinyest"
                        android:text="颜色分类：原味"/>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_talent_detail_open"
                style="@style/colorPrimaryTextStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/spacing_small"
                android:background="@drawable/bg_border_color_primary"
                android:paddingBottom="@dimen/spacing_tiny"
                android:paddingLeft="@dimen/spacing_smallest"
                android:paddingRight="@dimen/spacing_smallest"
                android:paddingTop="@dimen/spacing_tiny"
                android:text="查看全部评论"/>

            <buy.win.com.winbuy.view.commodityView.NoScrollListView
                android:id="@+id/nlv_"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/grey_normal_bg"
            android:padding="@dimen/spacing_smallest">

            <View
                android:layout_width="wrap_content"
                android:layout_height="0.5dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/spacing_normal"
                android:layout_toLeftOf="@+id/tv_good_detail_tuodong"
                android:background="@color/deep_transparent"/>

            <TextView
                android:id="@+id/tv_good_detail_tuodong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="继续拖动,查看图文详情"
                android:textSize="@dimen/font_small"/>

            <View
                android:layout_width="wrap_content"
                android:layout_height="0.5dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/spacing_normal"
                android:layout_toRightOf="@+id/tv_good_detail_tuodong"
                android:background="@color/deep_transparent"/>
        </RelativeLayout>

    </LinearLayout>
</buy.win.com.winbuy.view.commodityView.GradationScrollView>