<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="←结算中心"/>
    </android.support.v7.widget.Toolbar>

    <TextView
        android:id="@+id/addressInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="显示收货地址,联系电话"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/productList"
        android:layout_width="match_parent"
        android:layout_height="200dp">

    </android.support.v7.widget.RecyclerView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="这里以后会是一个recyclerView,item是每个商品的信息"/>

    <RadioGroup
        android:id="@+id/deliveryList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    </RadioGroup>

    <RadioGroup
        android:id="@+id/paymentList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/productList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/checkoutAddup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="共2件,总金额¥ 11976.00"/>
</LinearLayout>
